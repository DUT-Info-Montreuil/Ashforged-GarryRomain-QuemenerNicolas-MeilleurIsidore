<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="universite_paris8.iut.rgarry.ashforged.CraftController"
      alignment="CENTER" spacing="15" style="-fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="300">

    <Label text="🔨 Craft" style="-fx-font-size: 18px;" />

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="woodLabel" text="Bois: 3" />
        <Label fx:id="ironLabel" text="Fer: 2" />
    </HBox>

    <VBox spacing="10" alignment="CENTER">
        <Button text="🗡️ Fabriquer une Épée (1 Bois, 1 Fer)" onAction="#craftSword"/>
        <Button text="🛡️ Fabriquer un Bouclier (2 Bois, 1 Fer)" onAction="#craftShield"/>
    </VBox>

    <Label fx:id="resultLabel" text="Résultat : " style="-fx-font-weight: bold;" />
</VBox>
